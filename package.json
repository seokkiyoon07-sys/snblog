    "@typescript-eslint/parser": "^6.13.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "eslint": "^8.54.0",
    "eslint-config-next": "15.5.4",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.20.6",
    "typescript": "^5"
