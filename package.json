{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "test:jandi": "node scripts/test-jandi.js",
    "backup:posts": "node scripts/backup-posts.js",
    "restore:posts": "node scripts/restore-posts.js",
    "sync:notion": "tsx scripts/sync-notion.ts",
    "deploy": "./scripts/deploy.sh",
    "deploy:github": "./scripts/deploy.sh github",
    "deploy:vercel": "./scripts/deploy.sh vercel",
    "deploy:docker": "./scripts/deploy.sh docker",
    "docker:build": "docker build -t snblog .",
    "docker:run": "docker run -p 3000:3000 snblog",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@notionhq/client": "^2.3.0",
